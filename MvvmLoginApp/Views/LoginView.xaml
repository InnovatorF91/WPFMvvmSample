<UserControl
    x:Class="MvvmLoginApp.Views.LoginView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <TextBox
            Width="200"
            Margin="5"
            Text="{Binding Username}" />
        <PasswordBox
            x:Name="PasswordBox"
            Width="200"
            Margin="5" />
        <Button
            Width="100"
            Margin="5"
            Command="{Binding LoginCommand}"
            Content="登錄" />
    </StackPanel>
</UserControl>